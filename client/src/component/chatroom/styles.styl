
.main 
  height: 600px
  width : 800px
  backface-visibility: hidden
  background: #ffffff
  position: absolute
  top: 50%
  left: 50%
  margin-left: -400px
  margin-top: -300px
  border: 1px solid black
  display: flex
  &__navi
    flex: 0 0 120px
    border-right: 1px solid black
  &__content
    flex: 1
    display: flex
    flex-direction: column
    &__messages
      overflow: scroll
      flex: 1
      &__right
        width: 100%
        text-align: right
      &__left
        width: 100%
        text-align: left
    &__input
      flex: 0 0 120px
      textarea
        width: 100%
        height: 70%
      button
        float: right 
        margin-right: 10px
