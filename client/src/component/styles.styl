.login
  width: 380px
  height: 540px
  position: absolute
  top: 50%
  left: 50%
  margin-left: -190px
  margin-top: -270px
  border-radius: 4px
  -moz-border-radius: 4px
  -webkit-border-radius: 4px
  width: 380px;
  height: 540px;
  display: flex
  align-items: center
  justify-content: center
  box-shadow: 0 2px 10px #999
  &__form
    padding: 10px 20px
    border-radius: 4px
    transition: all 0.3s
    width: 80%
    &:hover
      position: relative
      z-index: 1
    &__title
      font-size: 22px
      height: 30px
      line-height: 30px
      text-align: center
    &__img
      width: 100%
      text-align: center
      img
        height 100px
    &__submit
      width: 100%


.wrapper
  display: flex
  justify-content: center
  align-items: center
  height 100%

input
  outline: 0